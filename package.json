{
  "name": "kata-video-surveillance",
  "version": "1.0.0",
  "description": "Practice exercise about using different kind of doubles for testing",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc -b",
    "clean": "rm -rf lib coverage",
    "analyze": "npm run lint:fix && npm run compile",
    "compile": "tsc --noEmit",
    "compile:watch": "tsc --noEmit --watch",
    "compile:build": "tsc -b",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint-staged": "lint-staged",
    "lint-staged:debug": "lint-staged --debug",
    "format": "prettier --config .prettierrc '**/*.+(ts|tsx)'",
    "format:check": "prettier --config .prettierrc '**/*.+(ts|tsx)' --check",
    "format:fix": "prettier --config .prettierrc '**/*.+(ts|tsx)' --write",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "validate": "npm run compile && npm run lint && npm run test",
    "upgrade": "ncu -i",
    "upgrade:all": "ncu -u"
  },
  "author": "Luis Amez",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.1.0",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.1.2",
    "npm-check-updates": "18.0.2",
    "prettier": "3.6.2",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
